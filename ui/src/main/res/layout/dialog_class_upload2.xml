<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <xc.ui.views.UIImageView
        android:id="@+id/iv_bg"
        android:layout_width="150.5dp"
        android:layout_height="44.25dp"
        android:background="@mipmap/upload_22"/>

    <xc.ui.views.UIProgressBar
        android:id="@+id/pb_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="125dp"
        android:layout_height="5dp"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/layer_upload_progress"
        android:layout_marginLeft="10.5dp"
        android:layout_marginTop="26.25dp"/>
</RelativeLayout>