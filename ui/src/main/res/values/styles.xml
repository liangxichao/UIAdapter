<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowBackground">@color/bg</item>
    </style>

    <style name="ILiveStudentMenuText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="xc.ui:ui_textSize">24</item>
        <item name="android:textColor">@color/record_edit_hint</item>
        <item name="xc.ui:ui_drawableHeight">60</item>
        <item name="xc.ui:ui_drawableWidth">60</item>
        <item name="xc.ui:ui_drawablePadding">6</item>
        <item name="xc.ui:ui_paddingTop">12</item>
    </style>

    <color name="bg">#384b5e</color>
</resources>
